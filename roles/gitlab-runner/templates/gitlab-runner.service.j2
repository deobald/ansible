[Unit]
Description=GitLab Runner
Documentation=man:podman-generate-systemd(1)
Wants=network-online.target
After=network-online.target
RequiresMountsFor=%t/containers

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=always
TimeoutStopSec=70
ExecStartPre=-rm -f %t/%n.ctr-id
ExecStart=/usr/bin/podman \
	--url unix:/run/user/{{ podman_user.uid }}/podman/podman.sock container run \
	--cidfile=%t/%n.ctr-id \
	--cgroups=no-conmon \
	--rm \
	--attach STDOUT \
	--attach STDERR \
	--sdnotify=conmon \
	--replace \
	--name gitlab-runner \
	--volume /run/user/{{ podman_user.uid }}/podman/podman.sock:/var/run/docker.sock:z \
	--volume /home/podman/gitlab-runner:/etc/gitlab-runner:Z \
	--label io.containers.autoupdate=image \
	--label org.gnome.pydocuum.skip=True docker.io/gitlab/gitlab-runner:latest
ExecStop=/usr/bin/podman stop \
	--ignore -t 10 \
	--cidfile=%t/%n.ctr-id
ExecStopPost=/usr/bin/podman rm \
	-f \
	--ignore -t 10 \
	--cidfile=%t/%n.ctr-id
NotifyAccess=all

[Install]
WantedBy=default.target
