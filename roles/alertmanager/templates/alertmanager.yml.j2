global:
  resolve_timeout: 5m

templates:
  - /etc/alertmanager/template/*.tmpl

route:
  group_by: ['alertname', 'instance', 'service']
  group_wait: 1m
  group_interval: 5m
  repeat_interval: 24h
  receiver: pagerduty

receivers:
  - name: pagerduty
    pagerduty_configs:
      - service_key: {{ alertmanager_pagerduty_key }}
