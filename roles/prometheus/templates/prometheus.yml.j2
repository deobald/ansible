global:
  scrape_interval: 15s
  evaluation_interval: 15s
  scrape_timeout: 10s

alerting:
  alertmanagers:
  - static_configs:
    - targets:
      - 127.0.0.1:9093

rule_files:
  - rules/*.rules

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
    - targets:
      - 127.0.0.1:9090

  - job_name: 'node'
    static_configs:
{% for hostgroup in prometheus_node_hostgroups %}
    - targets:
{% for host in groups[hostgroup] %}
      - vpn.{{ host }}:9100
{% endfor %}
      labels:
        role: {{ hostgroup }}
{% endfor %}
    - targets:
{% for target in prometheus_static_targets %}
      - {{ target }}
{% endfor %}

    relabel_configs:
    - source_labels: [ __address__ ]
      target_label: instance
      regex: (.*):9100
    - source_labels: [ __address__ ]
      target_label: instance
      regex: vpn.(.*):9100
