global:
  scrape_interval: 15s
  evaluation_interval: 15s
  scrape_timeout: 10s

alerting:
  alertmanagers:
  - static_configs:
    - targets:
      - 127.0.0.1:9093

rule_files:
  - rules/*.rules

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
    - targets:
      - 127.0.0.1:9090

  - job_name: 'node'
    static_configs:
{% for hostgroup in prometheus_node_hostgroups %}
    - targets:
{% for host in groups[hostgroup] %}
      - vpn.{{ host }}:9100
{% endfor %}
      labels:
        hostgroup: {{ hostgroup }}
{% endfor %}
    - targets:
{% for target in prometheus_static_node_targets | default([]) %}
      - {{ target }}
{% endfor %}
    relabel_configs:
    - source_labels: [ __address__ ]
      target_label: instance
      regex: vpn.(.*)

  - job_name: gitlab_database
    metrics_path: "/database"
    scheme: https
    static_configs:
      - targets:
        - prometheus-exporter-gitlab.apps.openshift4.gnome.org
  - job_name: gitlab_internals
    scheme: https
    metrics_path: "/-/metrics"
    static_configs:
      - targets:
        - gitlab.gnome.org
  - job_name: gitlab_sidekiq
    scheme: https
    metrics_path: "/sidekiq"
    static_configs:
      - targets:
        - prometheus-exporter-gitlab.apps.openshift4.gnome.org
  - job_name: gitlab_gitaly
    static_configs:
      - targets:
        - gitlab-git-svcs.gnome.org:9236

  - job_name: openshift4-postgresql
    scheme: https
    static_configs:
      - targets:
        - postgresql-exporter-primary.apps.openshift4.gnome.org
        - postgresql-exporter-replica.apps.openshift4.gnome.org

  - job_name: openshift4-mysqld
    scheme: https
    static_configs:
      - targets:
        - mysqld-exporter-0.apps.openshift4.gnome.org
        - mysqld-exporter-1.apps.openshift4.gnome.org
        - mysqld-exporter-2.apps.openshift4.gnome.org

  - job_name: 'external'
    honor_labels: true
    metrics_path: '/federate'
    params:
      'match[]':
      - '{job="node"}'
    static_configs:
    - targets:
      - bbb2.gnome.org:9090

  - job_name: gitlab-cicd
    scheme: https
    static_configs:
      - targets:
        - gitlab-ci-pipelines-exporter-gitlab.apps.openshift4.gnome.org
