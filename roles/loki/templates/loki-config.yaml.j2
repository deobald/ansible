auth_enabled: false

server:
  http_listen_port: 3100
  grpc_listen_port: 9096

common:
  instance_addr: 127.0.0.1
  path_prefix: /tmp/loki
  storage:
    filesystem:
      chunks_directory: {{ loki_base_dir }}/storage/chunks
      rules_directory: {{ loki_base_dir }}/storage/rules
  replication_factor: 1
  ring:
    kvstore:
      store: inmemory

query_range:
  results_cache:
    cache:
      embedded_cache:
        enabled: true
        max_size_mb: 100

schema_config:
  configs:
    - from: "2024-10-01"
      index:
        period: 24h
        prefix: index_
      object_store: s3
      schema: v13
      store: boltdb-shipper

storage_config:
  boltdb_shipper:
    active_index_directory: {{ loki_base_dir }}/storage/boltdb-shipper-active
    cache_location: {{ loki_base_dir }}/storage/boltdb-shipper-cache
    cache_ttl: 24h
  aws:
    s3: s3://{{ loki_bucket_config }}
    s3forcepathstyle: true

limits_config:
  retention_period: 90d
  reject_old_samples: true
  reject_old_samples_max_age: 168h
  allow_structured_metadata: false

ruler:
  alertmanager_url: http://localhost:9093

analytics:
  reporting_enabled: false
